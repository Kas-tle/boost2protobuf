#  GNUMakefile
 
# Just a snippet to stop executing under other make(1) commands
# that won't understand these lines
ifneq (,)
This makefile requires GNU Make.
endif


bs_src=${wildcard boost_serialization/*.cpp} 
bs_objs=${bs_src:.cpp=.o}
bs_lib = libboost_serialization.a
	
	
PBBUILD=@PBBUILD@

#if bundled pb is used, set pb lib
ifneq ($(PBBUILD),) 	
pb_lib=libprotobuf.a
PBBUILDDIR = $(PBBUILD)/src/google/protobuf/
pb_objs=$(PBBUILDDIR).libs/*.o $(PBBUILDDIR)stubs/.libs/*.o $(PBBUILDDIR)io/.libs/*.o
endif

CXX_STD = CXX11
PKG_CPPFLAGS =-DROUT @PKG_CPPFLAGS@ -Iboost_serialization
PKG_LIBS =${bs_lib} ${pb_lib} `${R_HOME}/bin/Rscript -e "flowCore:::LdFlags()"` @PKG_LIBS@ 


all: 	$(SHLIB) 

$(SHLIB): $(OBJECTS) $(bs_lib) $(pb_lib)

#archive bs objects
$(bs_lib): $(bs_objs)
		$(AR) rs $(bs_lib) ${bs_objs}

#archive pb objects (only executed when pb_lib is set)
$(pb_lib): $(pb_objs)
		$(AR) rs $(pb_lib) ${pb_objs}
		
.PHONY: 	all clean 

clean:
		rm -f $(OBJECTS) $(bs_lib) $(bs_objs) $(pb_lib) $(SHLIB)
 
